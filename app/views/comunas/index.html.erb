<% if current_admin %>
  <p id="notice"><%= notice %></p> 

  <h1>Comunas</h1>

  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Cuarentena</th>
      </tr>
    </thead>

    <tbody>
      <% @comunas.each do |comuna| %>
        <tr>
          <td><%= comuna.nombre %></td>
          <td><%= comuna.cuarentena %></td>
          <td><%= link_to 'Ver detalles', comuna_path(comuna.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Crear Comuna', comunas_new_path %><br><br>
  <%= link_to 'Volver a la lista de acciones disponibles.', admin_root_path %><br>
<% else %>
  <% controller.redirect_to new_admin_session_path, notice: 'No tienes permiso para ingresar a la pÃ¡gina que intentaste acceder.' %>
<% end %>